{% extends "base.html.j2" %}
{% block content %}
    <div class="py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-4 offset-md-4 text-right py-2">
            <a class="btn btn-primary" href="{{ url_for('add_user') }}"><i class="fas fa-plus"></i> Add User</a>
          </div>
        </div>
      <div class="row">
        <div class="col-md-4 offset-md-4">
          <div class="card">
            <div class="card-header">
              <b>Manage Users</b>
            </div>
            <div class="card-body">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Users</th>
                    <th class="text-center">Action</th>
                  </tr>
                </thead>
                <tbody>
                {% for user in users %}
                  <tr>
                    <td>{{ user }}</td>
                    <td class="text-center">
                      <a class="btn-sm btn-dark" href="{{ url_for('edit_user', username=user) }}"><i class="fas fa-edit"></i> Edit</a>
                      <a class="btn-sm btn-danger" href="{{ url_for('remove_user', username=user) }}"><i class="fas fa-trash-alt"></i> Remove</a>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}